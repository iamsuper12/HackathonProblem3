print("How much risk are you willing to take? please enter Low, medium or high")
risk = input()
print (risk)
def buyStocks(Sprice):
  if timeline == 1 and risk=='high':
    print("I am in")
    S_Quantity[Sname.index('AMZN')] += 0.6*(in_inv)/Sprice[Sname.index('AMZN')]
